<%= simple_form_for @job do |f| %>
  <div class="form-group">
    <%= f.input :title, label: "标题", input_html: { class: "form-control"} %>
    <%= f.input :description, label: "简介", input_html: { class: "form-control"} %>
    <%= f.input :wage_lower_bound, label: "最低薪资" %>
    <%= f.input :wage_upper_bound, label: "最高薪资" %>
    <%= f.input :contact_email, label: "联系邮箱" %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>
